.App {
    background-color: aquamarine;
}

.first{
    display: grid;
    grid-template-columns: 1fr ;
    border: 3px solid rgb(255, 60, 0);
    border-radius: 20px;
    width: fit-content;
    margin-left: 0;
}
.container{
    display: grid;
    grid-template-columns: 2fr 1fr ;
    grid-gap: 0em;
    border: 1px solid rgb(209, 45, 209);
    border-radius: 20px;
    
}

h1{
    border: 1px solid red;
    border-radius: 20px;
    text-align: center;
    margin: 50px auto;
    

}
input{
    border: 1px solid rgb(137, 35, 233);
    border-radius: 5px;
    margin: auto;
    width: 70%;
    height: 80%;
    text-align: center;
}
textarea{
    border: 1px solid rgb(71, 146, 36);
    height: max-content;
    padding: 150px;
    margin-top: 5px;
    margin-bottom: 0;
}
button{
    border: 1px solid orange;
    border-radius: 100px;
    padding: 10px;
    margin-bottom: auto;
    margin-top: 0;

    
}
.listOfTenPastes {
    border: 3px solid rgb(36, 165, 197);
    text-align:center;
    margin-left: 0;
    margin-right: 50;
    width: 700px;

}

h2{
    border: 2px solid rgb(78, 7, 76);
    width: 70%;
    border-radius: 1opx;
}

.onePasteItem{
    text-align: center;
    border: 1px solid rgb(104, 8, 8);
    border-radius: 5px 30px 5px ;
    padding:5px;
    margin: 5px;
    height: 50px;
    /* backdrop-filter: blur(12px); */
}

